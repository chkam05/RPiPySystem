{
    "version": "0.2.0",
    "configurations": [
        
        {
            // --- RUN & DEBUG PYTHON ---
            "name": "Current Python File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "justMyCode": true
        },
        {
            // --- Attach debugger for sudo or supervisor processes ---
            "name": "Attach to debugpy (sudo/external)",
            "type": "debugpy",
            "request": "attach",
            "connect": {
                "host": "localhost",
                "port": 5678
            },
            "justMyCode": true
        }
    ]
}